generator client {
  provider = "prisma-client-js"
  output   = "./../../../../node_modules/@prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String       @id      @default(uuid())
  walletId   String
  coinName   String
  leverage   Float
  positionType   PositionType
  currentPositionSize    Float
  collateral  Float
  entryPrice Float
  markPrice   Float
  liquidationPrice   Float
  takeProfit  Float          @default(0)
  stopLoss    Float          @default(0)
  currentPnL  Float
  totalFees   Float          @default(0)
  status      Boolean        @default(true)   // true means open
  openTime     DateTime
  closeTime    DateTime?
  lastFeeCalculatedTime    DateTime 
}

model UserClosed {
  id         String       @id      @default(uuid())
  walletId   String
  coinName   String
  leverage   Float
  positionType   PositionType
  currentPositionSize    Float
  collateral  Float
  entryPrice Float
  markPrice   Float
  liquidationPrice   Float
  takeProfit  Float          @default(0)
  stopLoss    Float          @default(0)
  currentPnL  Float
  totalFees   Float          @default(0)
  status      Boolean        @default(true)   // true means open
  openTime     DateTime
  closeTime    DateTime
  lastFeeCalculatedTime    DateTime? 
}

enum PositionType {
  LONG
  SHORT
}